<?php

namespace app\controllers;

use app\core\Application;
use app\core\Controller;
use app\core\Request;
use app\models\Chat;

class ChatController extends Controller
{
    public function searchCustomers()
    {
        $session = Application::$app->session;
        $technicianId = $session->get('tech_id');

        if (!$technicianId) {
            echo "Technician not logged in";
            return;
        }

        $searchTerm = Application::$app->request->getBody()['searchTerm'] ?? '';
        if (empty($searchTerm)) {
            echo "No search term provided";
            return;
        }

        $customerModel = new Customer();
        $customers = $customerModel->searchByName($searchTerm);

        if (empty($customers)) {
            echo "No customer found related to your search term";
        } else {
            foreach ($customers as $customer) {
                echo "<a href='#'>
                        <div class='content'>
                            <img src='" . ($customer['profile_picture'] ?? '/assets/user_avatar.png') . "' alt=''>
                            <div class='details'>
                                <span>" . htmlspecialchars($customer['fname'] . ' ' . $customer['lname']) . "</span>
                                <p>This is a test message</p>
                            </div>
                        </div>
                        <div class='status-dot'><i class='fas fa-circle'></i></div>
                      </a>";
            }
        }
    }

    public function sendMessage(Request $request)
    {
        $data = $request->getBody();
        $tech_id = Application::$app->session->get('technician');

        $model = new Chat();
        $model->saveMessage($tech_id, $data['cus_id'], $data['message']);

        return json_encode(['status' => 'success']);
    }

    public function loadMessages(Request $request)
    {
        $data = $request->getBody();
        $tech_id = Application::$app->session->get('technician');
        $cus_id = $data['cus_id'];

        $model = new Chat();
        $messages = $model->getChatMessages($tech_id, $cus_id);

        return json_encode($messages);
    }
}
